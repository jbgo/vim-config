" Hide all GUI scrollbars, menus, toolbars, etc. except for the right
" scrollbar
set guioptions=

" toggle scollbars
map <Leader>r :if &go=~#'r'<Bar>set go-=r<Bar>else<Bar>set go+=r<Bar>endif<CR>

" Change the default font
set guifont=Monaco:h12

" show a vertical rule at column 100
set colorcolumn=100
hi ColorColumn guibg=#222222

color solarized

" python settings
autocmd FileType python set colorcolumn=80
